<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.mesaitakip.ui.LoginFragment"
        android:label="Giriş Yap"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_loginFragment_to_dashboardFragment"
            app:destination="@id/dashboardFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.mesaitakip.ui.RegisterFragment"
        android:label="Kayıt Ol"
        tools:layout="@layout/fragment_register" />

    <fragment
        android:id="@+id/dashboardFragment"
        android:name="com.example.mesaitakip.ui.DashboardFragment"
        android:label="Mesai Takip"
        tools:layout="@layout/fragment_dashboard">
        <action
            android:id="@+id/action_dashboardFragment_to_weekDetailFragment"
            app:destination="@id/weekDetailFragment" />
        <action
            android:id="@+id/action_dashboardFragment_to_adminFragment"
            app:destination="@id/adminFragment" />
        <action
            android:id="@+id/action_dashboardFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/dashboardFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/weekDetailFragment"
        android:name="com.example.mesaitakip.ui.WeekDetailFragment"
        android:label="Hafta Detayı"
        tools:layout="@layout/fragment_week_detail">
        <argument
            android:name="weekId"
            app:argType="integer" />
    </fragment>

    <fragment
        android:id="@+id/adminFragment"
        android:name="com.example.mesaitakip.ui.AdminFragment"
        android:label="Yönetici Paneli"
        tools:layout="@layout/fragment_admin" />
</navigation>
